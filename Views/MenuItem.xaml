<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="MenuItemTemplate" DataType="CTEDSDigitalMenu:MenuItem">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Margin="5" FontSize="22" Text="{Binding Path=Name}" FontWeight="Bold" TextAlignment="Center"/>
                <Image Width="300" Height="300" Source="{Binding Path=PhotoPath}" Margin="5"/>
            </StackPanel>
            <TextBlock TextWrapping="Wrap" Grid.Column="1" Text="{Binding Path=Description}" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Margin="5" Text="{Binding Path=Price}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>