<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="MenuItemTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Margin="5" FontFamily="Candara" FontSize="32" TextWrapping="Wrap" Text="{Binding Path=Name}" FontWeight="Bold" TextAlignment="Center"/>
                <Image Height="300" Source="{Binding Path=PhotoPath}" Margin="5"/>
            </StackPanel>
            <TextBlock FontFamily="Candara Light" FontSize="32" TextWrapping="Wrap" Grid.Column="1" Text="{Binding Path=Description}" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock FontFamily="Dubai" FontSize="25" Grid.Column="2" Margin="15" Text="{Binding Path=Price,StringFormat='R$ {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>